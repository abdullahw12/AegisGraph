# Neo4j Aura Configuration
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# AWS Bedrock Configuration (Optional - can use mock mode)
AWS_REGION=us-west-2
AWS_DEFAULT_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SESSION_TOKEN=your-aws-session-token

# Datadog Configuration
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-application-key
DD_AGENT_HOST=localhost
DD_STATSD_PORT=8125
DD_DASHBOARD_URL=https://app.datadoghq.com/dashboard/your-dashboard-id

# MiniMax TTS (Optional - pipeline degrades gracefully if absent)
# MINIMAX_API_KEY=your-minimax-api-key

# Mock Bedrock Mode
# Set to true if AWS Bedrock is not available
# When true, uses mock responses instead of real LLM
USE_MOCK_BEDROCK=true
